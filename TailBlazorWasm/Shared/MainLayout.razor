        <div class="p-[8px]">
            <DarkSwitch />
        </div>

    </div>

    <main class="app">
        @Body
    </main>

    <footer class="bg-gradient-to-b to-dotnet-blurple 
                        from-white dark:from-neutral-900 
                        text-black dark:text-white 

                    bottom-0 w-full 
                    text-lg leading-[60px]
                    flex flex-row justify-evenly">

        <div class="font-mono">
            @@ MainLayout.razor
        </div>
    </footer>

</div>

